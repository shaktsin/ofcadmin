<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>

<div id="wrapper">

    <% include ../partials/header %>

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Categories
                    <button type="button" id="main_cat_create"
                            class="btn btn-primary btn-sm">Create Main Category</button>
                </h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

        <div class="row" id="category_tree">
            <div class="col-lg-12">
                <ul>
                    <% for(var i=0; i<cat_tree.length; i++) {%>
                    <li class="cat_node"  data_id="<%= cat_tree[i].id %>"
                        cat_name="<%= cat_tree[i].cat_name %>"
                        parent_id="1" parent_name="root"
                        cat_display_name="<%= cat_tree[i].display_name %>">
                        <%= cat_tree[i].display_name %>
                        <% if(cat_tree[i].children) {%>
                            <i class="fa fa-caret-right"></i>
                            <ul>
                                <% for(var j=0; j<cat_tree[i].children.length; j++) {%>
                                    <li class="cat_node"
                                        data_id="<%= cat_tree[i].children[j].id %>"
                                        parent_id="<%= cat_tree[i].id %>" parent_name="<%= cat_tree[i].display_name %>"
                                        cat_name="<%= cat_tree[i].children[j].cat_name %>"
                                        cat_display_name="<%= cat_tree[i].children[j].display_name %>">
                                        <%= cat_tree[i].children[j].display_name %>
                                    </li>
                                <% } %>
                            </ul>
                        <% } %>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>

        <div class="row" id="cat_actions">
            <div class="col-lg-12">
                <h3 class="page-header">
                    Actions On
                    <span id="action_cat_name" cat_name="" cat_display_name="" data_id=""></span>
                    <button type="button" id="sub_cat_create"
                            class="btn btn-primary btn-sm">Create Sub Category</button>
                </h3>
            </div>

            <div class="col-sm-6">
                <form role="form" id="cat_action_form" action="">
                    <div class="form-group message_block">
                        <div class="alert alert-danger hidden error"></div>
                        <div class="alert alert alert-success hidden success"></div>
                    </div>
                    <div class="form-group">
                        <input type="text"  placeholder="sname" name="sname" class="form-control" required="true">
                    </div>
                    <div class="form-group">
                        <input type="text"  placeholder="display_name"
                               name="display_name" class="form-control" required="true">
                    </div>
                    <div class="form-group">
                        <input type="text" data-id=""
                               name="parent_id" class="form-control" readonly="true">
                    </div>

                    <button type="button" class="btn btn-primary btn-sm update_btn">Update</button>
                    <button type="button" class="btn btn-primary btn-sm create_btn">Create</button>

                </form>
            </div>


            <!-- /.col-lg-12 -->
        </div>

    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

<% include ../partials/footer %>
<script src="/js/category.js"></script>



</body>

</html>
